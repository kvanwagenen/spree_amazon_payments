<%
  unless amazon_payments.nil? || amazon_payments.preferred_seller_id.nil? || amazon_payments.preferred_client_id.nil? || amazon_payments.preferred_widgets_js_url.nil? || !amazon_payments.show_on_frontend?
%>
<script type='text/javascript'>
  window.onAmazonLoginReady = function() {

    amazon.Login.setClientId('<%= amazon_payments.preferred_client_id %>');
  };
</script>
<script type='text/javascript'
  src='<%= amazon_payments.preferred_widgets_js_url %>?sellerId=<%= amazon_payments.preferred_seller_id %>'>
</script>
<% end %>